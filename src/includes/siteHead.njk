<meta charset="utf-8" />

<script>
  document.documentElement.className = document.documentElement.className.replace(/\bno-js\b/, 'js')
</script>

{% set pageDescription = description or site.description %}
{% set pageTitle = [title or site.description, site.title].join(' â€” ') %}

<link rel="apple-touch-icon" href="{{ site.favicon }}" />
<link rel="dns-prefetch" href="//use.typekit.net">
<link rel="icon" type="image/png" href="{{ site.favicon }}" sizes="196x196" />
<meta http-equiv="content-script-type" content="text/javascript">
<meta http-equiv="content-style-type" content="text/css">
<meta name="apple-mobile-web-app-title" content="100yen">
<meta name="application-name" content="{{ pageTitle }}" />
<meta name="description" content="{{ pageDescription }}" />
<meta name="google-site-verification" content="EJOTQWsVwuMA6tjtdmDXM0v8ejx4G12gMnu9MKnT5f4">
<meta name="twitter:card" content="summary_large_image" />
<meta name="twitter:image" content="{{ site.baseUrl }}/{{ page.url }}./cover.png" />
<meta name="twitter:site" content="{{ site.twitter }}" />
<meta name="twitter:creator" content="{{ site.twitter }}" />
<meta name="twitter:title" content="{{ pageTitle }}" />
<meta name="twitter:url" content="{{ site.baseUrl }}" />
<meta name="viewport" content="width=device-width, initial-scale=1.0" />
<meta property="og:description" content="{{ pageDescription }}">
<meta property="og:image" content="{{ site.baseUrl }}/{{ page.url }}./cover.png" />
<meta property="og:locale" content="en_GB">
<meta property="og:site_name" content="{{ pageTitle }}" />
<meta property="og:title" content="{{ pageTitle }}" />
<meta property="og:type" content="website">
<meta property="og:url" content="{{ site.baseUrl }}" />

<script src="//use.typekit.net/tgw1nyv.js"></script>
<script> try { Typekit.load(); } catch (e) {} </script>

{% if globalStyles %}
  <link rel="stylesheet" href="/_assets/styles/global.css" />
{% endif %}

{% if sectionStyles %}
  <link rel="stylesheet" href="/_assets/styles/{{ sectionStyles }}.css" />
{% endif %}

{% if styles %}
  <link rel="stylesheet" href="{{ page.url }}./styles.css" />
{% endif %}

<title>{{ pageTitle }}</title>
